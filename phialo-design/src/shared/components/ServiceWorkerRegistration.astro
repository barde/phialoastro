    }
    
    // Prefetch URLs for offline availability
    async prefetchUrls(urls: string[]) {
      if (!navigator.serviceWorker.controller) return;
      
      navigator.serviceWorker.controller.postMessage({
        type: 'CACHE_URLS',
        urls: urls
      });
    }
