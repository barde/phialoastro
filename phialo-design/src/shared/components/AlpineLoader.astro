---
// Alpine.js Loader - Only load Alpine.js when needed
export interface Props {
  enabled?: boolean;
}

const { enabled = false } = Astro.props;
---

{enabled && (
  <script>
    // Load Alpine.js only when components that need it are present
    if (document.querySelector('[x-data]')) {
      import('alpinejs').then(({ default: Alpine }) => {
        window.Alpine = Alpine;
        Alpine.start();
      });
    }
  </script>
)}