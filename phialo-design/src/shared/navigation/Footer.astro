---
import BrandIcon from '../components/icons/BrandIcons.astro';

// Language-aware content
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en/');

// Footer content translations
const footerContent = {
  de: {
    description: 'Wo Schmuck auf Innovation trifft. Hochwertige 3D Designs und individuelle Kreationen für anspruchsvolle Kunden.',
    navigation: 'Navigation',
    contact: 'Kontakt',
    phoneLabel: 'Telefon',
    copyright: '© 2025 Phialo Design. Alle Rechte vorbehalten.',
    imprint: 'Impressum',
    country: 'Deutschland',
    navItems: {
      portfolio: 'Portfolio',
      services: '3D für Sie',
      classes: 'Classes',
      about: 'Über Phialo',
      contact: 'Kontakt',
      imprint: 'Impressum'
    },
    socialLabels: {
      linkedin: 'LinkedIn',
      youtube: 'YouTube',
      instagram: 'Instagram'
    }
  },
  en: {
    description: 'Where jewelry meets innovation. High-quality 3D designs and individual creations for discerning customers.',
    navigation: 'Navigation',
    contact: 'Contact',
    phoneLabel: 'Phone',
    copyright: '© 2025 Phialo Design. All rights reserved.',
    imprint: 'Legal Notice',
    country: 'Germany',
    navItems: {
      portfolio: 'Portfolio',
      services: '3D for You',
      classes: 'Classes',
      about: 'About Phialo',
      contact: 'Contact',
      imprint: 'Legal Notice'
    },
    socialLabels: {
      linkedin: 'LinkedIn',
      youtube: 'YouTube',
      instagram: 'Instagram'
    }
  }
};

const content = isEnglish ? footerContent.en : footerContent.de;
const logoHref = isEnglish ? '/en' : '/';
const getLocalizedHref = (href: string) => isEnglish ? `/en${href}` : href;
---

<footer class="bg-off-white border-t border-gray-100">
  <div class="container mx-auto px-6 pt-20 pb-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Brand Column -->
      <div class="space-y-6 pl-5">
        <a 
          href={logoHref}
          class="inline-block font-display text-2xl font-medium text-midnight hover:text-gold transition-colors mt-5 md:mt-5"
        >
          PHIALO
        </a>
        <p class="text-gray-600 text-sm leading-relaxed max-w-xs">
          {content.description}
        </p>
        <div class="flex items-center gap-2 text-xs">
          <span class="px-2 py-1 bg-gold/10 text-gold rounded">
            {isEnglish ? 'Handcrafted' : 'Handgefertigt'}
          </span>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div class="space-y-6 pl-5">
        <h3 class="font-sans text-sm font-semibold text-theme-text-primary uppercase tracking-wider md:mt-5">
          {content.navigation}
        </h3>
        <nav class="space-y-4">
          <a href={getLocalizedHref('/portfolio')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.portfolio}
          </a>
          <a href={getLocalizedHref('/services')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.services}
          </a>
          <a href={getLocalizedHref('/classes')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.classes}
          </a>
          <a href={getLocalizedHref('/about')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.about}
          </a>
          <a href={getLocalizedHref('/contact')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.contact}
          </a>
          <a href={getLocalizedHref('/imprint')} class="block text-sm text-gray-600 hover:text-midnight transition-colors">
            {content.navItems.imprint}
          </a>
        </nav>
      </div>
      
      <!-- Contact & Social -->
      <div class="space-y-6 pl-5">
        <h3 class="font-sans text-sm font-semibold text-theme-text-primary uppercase tracking-wider md:mt-5">
          {content.contact}
        </h3>
        <div class="space-y-4 text-sm text-theme-text-secondary">
          <a 
            href="mailto:kontakt@phialo.de" 
            class="block hover:text-theme-text-primary transition-colors"
          >
            kontakt@phialo.de
          </a>
          <a 
            href="tel:+4915785664700" 
            class="block hover:text-theme-text-primary transition-colors"
          >
            (+49) 1578 566 47 00
          </a>
          <p class="text-theme-text-secondary">{content.country}</p>
        </div>
        
        <!-- Social Links -->
        <div class="flex items-center gap-4 pt-4">
          <a 
            href="https://www.linkedin.com/in/gesa-pickbrenner/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="p-2 text-theme-text-secondary hover:text-theme-text-primary transition-colors"
            aria-label={content.socialLabels.linkedin}
          >
            <BrandIcon icon="linkedin" size={20} />
          </a>
          <a 
            href="https://youtube.com/@phialodesign" 
            target="_blank" 
            rel="noopener noreferrer"
            class="p-2 text-theme-text-secondary hover:text-theme-text-primary transition-colors"
            aria-label={content.socialLabels.youtube}
          >
            <BrandIcon icon="youtube" size={20} />
          </a>
          <a 
            href="https://www.instagram.com/phialo_design/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="p-2 text-theme-text-secondary hover:text-theme-text-primary transition-colors"
            aria-label={content.socialLabels.instagram}
          >
            <BrandIcon icon="instagram" size={20} />
          </a>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-2.5 pb-2.5 pl-5 border-t border-theme-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-xs text-theme-text-tertiary">
        {content.copyright}
      </p>
    </div>
  </div>
</footer>
