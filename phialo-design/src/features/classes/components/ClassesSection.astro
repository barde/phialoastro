      <div 
        class="flex gap-8 overflow-x-auto scrollbar-hide pb-6 snap-x snap-mandatory"
        style="scroll-padding-left: 1.5rem;"
      >
        {classes.map((classItem) => (
          <article 
            class="flex-none w-80 bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 snap-start class-card"
