---
import { getCollection } from 'astro:content';

// Language detection
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en/');
const lang = isEnglish ? 'en' : 'de';

// Language-specific content
const content = {
  de: {
    title: "Classes",
    subtitle: "Lernen Sie 3D-Design mit Blender! Kurse für Anfänger und Fortgeschrittene in Deutsch und Englisch.",
    skillshareLabel: "Auf Skillshare ansehen",
    directPurchaseLabel: "Direkt kaufen (ohne Mitgliedschaft)"
  },
  en: {
    title: "Classes", 
    subtitle: "Learn 3D design with Blender! Courses for beginners and advanced users in German and English.",
    skillshareLabel: "View on Skillshare",
    directPurchaseLabel: "Direct purchase (no membership required)"
  }
};

const t = isEnglish ? content.en : content.de;

// Fetch all classes from content collections (show both languages on each page for multilingual experience)
const allClasses = await getCollection('classes');

// Transform the classes to match the expected format
const classes = allClasses.map((classItem) => ({
  id: classItem.slug,
  title: classItem.data.title,
  description: classItem.data.description,
  image: classItem.data.image,
  duration: classItem.data.duration,
  category: classItem.data.categoryDisplay,
  language: classItem.data.language,
  featured: classItem.data.featured,
  link: classItem.data.link,
  directLink: classItem.data.directLink,
  platform: classItem.data.platform,
  difficulty: classItem.data.difficulty,
  author: classItem.data.author,
  tags: classItem.data.tags || []
})).sort((a, b) => {
  // Sort by featured first, then by language (current language first)
  if (a.featured !== b.featured) {
    return b.featured ? 1 : -1;
  }
  if (a.language !== b.language) {
    return a.language === lang ? -1 : 1;
  }
  return 0;
});
---

<section id="classes" class="py-20 bg-neutral-50">
  <div class="container mx-auto px-6 lg:px-5">    <!-- Section Content -->
    <div class="text-center mb-16">
      <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
        {t.subtitle}
      </p>
    </div>

    <!-- Classes Grid Container -->
    <div class="relative">
      <div 
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 pb-6"
      >
        {classes.map((classItem) => (
          <article 
            class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 class-card"
            data-class-id={classItem.id}
          >
            <!-- Image -->
            <div class="relative h-48 bg-neutral-200">
              <img 
                src={classItem.image} 
                alt={classItem.title}
                class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                loading="lazy"
              />
              <!-- Language Badge -->
              <div class="absolute top-3 right-3">
                <span class={`inline-flex items-center justify-center w-10 h-10 rounded-full text-xs font-bold backdrop-blur-md shadow-lg transition-all duration-300 hover:scale-110 ${
                  classItem.language === 'de' 
                    ? 'bg-neutral-900/85 text-white border-2 border-white/30 hover:bg-neutral-900/95' 
                    : 'bg-white/85 text-neutral-900 border-2 border-neutral-900/20 hover:bg-white/95'
                }`}>
                  {classItem.language === 'de' ? 'DE' : 'EN'}
                </span>
              </div>
            </div>            <!-- Content -->
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-neutral-100 text-neutral-700">
                  {classItem.category}
                </span>
              </div>
              
              <h3 class="text-xl font-semibold text-neutral-900 mb-3 line-clamp-2">
                {classItem.title}
              </h3>
              
              <p class="text-neutral-600 mb-6 line-clamp-3">
                {classItem.description}
              </p>

              <div class="space-y-3">
                <a 
                  href={classItem.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors group"
                >
                  {t.skillshareLabel}
                  <svg 
                    class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
                
                {classItem.directLink && (
                  <div>
                    <a 
                      href={classItem.directLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center text-gold hover:text-gold/80 font-medium transition-colors group text-sm"
                    >
                      {t.directPurchaseLabel}
                      <svg 
                        class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" 
                        fill="none" 
                        stroke="currentColor" 
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  </div>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
