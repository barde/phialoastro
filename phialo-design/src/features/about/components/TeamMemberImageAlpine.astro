---
export interface Props {
  primaryImage: string;
  hoverImage: string;
  alt: string;
  className?: string;
}

const { primaryImage, hoverImage, alt, className = '' } = Astro.props;
---

<div 
  x-data="{
    isHovered: false,
    imagesPreloaded: false,
    altText: '${alt}',
    init() {
      // Preload hover image
      const img = new Image();
      img.src = this.$refs.hoverImg.src;
      img.onload = () => { this.imagesPreloaded = true; };
      img.onerror = () => { this.imagesPreloaded = true; };
    }
  }"
  @mouseenter="isHovered = true"
  @mouseleave="isHovered = false"
  @keydown.enter.prevent="isHovered = !isHovered"
  @keydown.space.prevent="isHovered = !isHovered"
  class="group relative focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 rounded-lg"
  tabindex="0"
  role="button"
  :aria-label="`${altText} - Press Enter to toggle alternate image`"
>
  <!-- Primary image (always visible for SEO) -->
  <img 
    src={primaryImage}
    alt={alt}
    class={`transition-all duration-500 ease-luxury ${className}`}
    :class="{ 'opacity-0': isHovered && imagesPreloaded, 'opacity-100': !isHovered || !imagesPreloaded }"
    loading="lazy"
  />
  
  <!-- Hover image -->
  <img 
    x-ref="hoverImg"
    src={hoverImage}
    alt={`${alt} - alternate view`}
    class={`absolute inset-0 transition-all duration-500 ease-luxury ${className}`}
    :class="{ 'opacity-100': isHovered && imagesPreloaded, 'opacity-0': !isHovered || !imagesPreloaded }"
    loading="eager"
    :aria-hidden="!isHovered"
  />
  
  <!-- Easter egg hint icon -->
  <div 
    x-show="imagesPreloaded"
    class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 group-focus:opacity-100 transition-opacity duration-300 pointer-events-none"
    aria-hidden="true"
  >
    <div class="bg-white/90 backdrop-blur-sm rounded-full p-2">
      <svg 
        class="w-5 h-5 text-gold" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" 
        />
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" 
        />
      </svg>
    </div>
  </div>
  
  <!-- Preload link for better performance -->
  <link rel="preload" as="image" href={hoverImage} />
</div>