---
// English version - Content to be translated
import PageLayout from '../../../../shared/layouts/PageLayout.astro';
import Services from '../../components/ServicesSection.astro';

const title = '3D for You | Phialo Design';
const description = 'Professional 3D design services for your individual projects. From idea to finished 3D model.';
---

<PageLayout title={title} description={description} lang="en">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-b from-neutral-50 to-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-light text-neutral-900 mb-8">
          3D for You
        </h1>
        <p class="text-xl text-neutral-600 leading-relaxed">
          Transform your ideas into tangible reality. Our professional 3D design service 
          brings your visions from concept to finished model.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <div class="pt-0">
    <Services />
  </div>

  <!-- Call-to-Action -->
  <section class="py-20 bg-midnight text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-light mb-6">
        Have a project in mind?
      </h2>
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        Contact us for a free consultation and let's bring your idea to life together.
      </p>
      <a 
        href="/en/contact" 
        class="inline-flex items-center px-8 py-4 bg-gold text-midnight text-lg font-medium rounded-full hover:bg-champagne transition-colors"
      >
        Free Consultation
      </a>
    </div>
  </section>
</PageLayout>