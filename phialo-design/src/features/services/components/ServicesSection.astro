---
import { Image } from 'astro:assets';
import Button from '../../../shared/components/ui/Button.astro';
import { Palette, Eye, Cog } from 'lucide-react';

// Language detection
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en/');

// Language-specific content
const content = {
  de: {
    title: "3D für Sie",
    subtitle1: "Profitieren Sie von unserer Erfahrung im 3D-Design von Schmuckstücken und Skulpturen.",
    subtitle2: "Fotorealistische Renderings, die beeindrucken und überzeugen.",
    description: "Möchten Sie Ihr Schmuckstück besonders gut einschätzen, Ihrem Kunden präsentieren oder für eine Werbeaktion darstellen lassen? Wir erstellen für Sie vor dem Guss auf Wunsch eine hochwertige fotorealistische Vorschau.",
    tutorialInfo1: "Wir bieten Design Tutorials in Deutsch und Englisch!",
    tutorialsLink: "#tutorials",
    service1: {
      title: "3D Design & CAD",
      description: "Erfahrene Goldschmiede erschaffen Ihre Idee mit CAD-Software. Die perfekte Umsetzbarkeit als Guss oder Druck in vielfältigen Materialien ist garantiert. Wir liefern Ihnen druckfähige, wasserdicht vorbereitete Dateien jeglicher Komplexität.",
      cta: "Anfrage stellen"
    },
    service2: {
      title: "Guss & 3D-Druck",
      description: "Brauchen Sie Güsse oder ein Wachsmodell? In Zusammenarbeit mit kompetenten Partnern wie 3D-Druckereien und Gießereien erschaffen wir Ihr ideales Juwel.",
      advantages: "Ihre Vorteile: Persönlicher Ansprechpartner während des gesamten Designprozesses. Schnelle Umsetzung, auf Wunsch innerhalb eines Tages. Garantierte Druckbarkeit.",
      cta: "Kontakt aufnehmen"
    },
    service3: {
      title: "Beratung & Support",
      description: "Benötigen Sie mehr Informationen? Haben Sie eine konkrete Anfrage? Wir beraten Sie gern und stehen Ihnen während des gesamten Projekts zur Seite.",
      cta: "Beratung anfragen"
    },
    ctaSection: {
      title: "Kontaktieren Sie uns jetzt!",
      description: "Benötigen Sie mehr Informationen? Haben Sie eine konkrete Anfrage? Wir beraten Sie gern.",
      cta: "Jetzt Kontakt aufnehmen"
    },
    contactUrl: "/contact"
  },
  en: {
    title: "3D for You",
    subtitle1: "Benefit from our experience in 3D design of jewelry and sculptures.",
    subtitle2: "Photorealistic renderings that impress and convince.",
    description: "Would you like to better assess your jewelry piece, present it to your customer, or have it displayed for an advertising campaign? We create high-quality photorealistic previews for you before casting upon request.",
    tutorialInfo1: "We offer Design Tutorials in German and English!",
    tutorialsLink: "#tutorials",
    service1: {
      title: "3D Design & CAD",
      description: "Experienced goldsmiths bring your ideas to life with CAD software. Perfect implementation as casting or printing in various materials is guaranteed. We deliver print-ready, watertight prepared files of any complexity.",
      cta: "Make Inquiry"
    },
    service2: {
      title: "Casting & 3D Printing",
      description: "Do you need castings or a wax model? In collaboration with competent partners such as 3D printing companies and foundries, we create your ideal jewel.",
      advantages: "Your Benefits: Personal contact person throughout the entire design process. Fast implementation, within one day if desired. Guaranteed printability.",
      cta: "Get in Touch"
    },
    service3: {
      title: "Consultation & Support",
      description: "Do you need more information? Do you have a specific inquiry? We are happy to advise you and support you throughout the entire project.",
      cta: "Request Consultation"
    },
    ctaSection: {
      title: "Contact us now!",
      description: "Do you need more information? Do you have a specific inquiry? We are happy to advise you.",
      cta: "Contact us now"
    },
    contactUrl: "/en/contact"
  }
};

const t = isEnglish ? content.en : content.de;
---

<section id="services" class="services-section py-24 bg-off-white">
  <div class="container mx-auto px-6">    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="font-display text-4xl md:text-5xl font-medium text-midnight mb-6">
        {t.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed mb-8">
        <strong>{t.subtitle1}</strong>
      </p>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed mb-8">
        <strong>{t.subtitle2}</strong> {t.description}
      </p>
      
      <!-- YouTube Video Embed -->      <div class="mb-12 flex justify-center">
        <iframe 
          class="w-full max-w-2xl aspect-video rounded-lg shadow-lg" 
          src="https://www.youtube.com/embed/os0Y88dDGSA?si=gcNPcctpvrc186kW" 
          title="YouTube video player" 
          loading="lazy"
          frameborder="0" 
          allow="web-share" 
          referrerpolicy="strict-origin-when-cross-origin" 
          allowfullscreen>
        </iframe>
      </div>
      
      <div class="flex flex-col md:grid md:grid-cols-2 gap-8 items-center max-w-6xl mx-auto mb-12">
        <div class="text-center order-2 md:order-1">
          <p class="text-gray-600 mb-4">
            {isEnglish ? 'We offer' : 'Wir bieten'} <a href={t.tutorialsLink} class="text-gold hover:underline">Design Tutorials</a> {isEnglish ? 'in German and English!' : 'in Deutsch und Englisch!'}
          </p>
        </div>
        <div class="flex justify-center order-1 md:order-2">
          <img src="/images/0242_sparklingJewelry_byPhialoDesign_square_569.jpg" alt="Sparkling Jewelry by Phialo Design" class="rounded-lg shadow-lg max-w-sm w-full md:w-auto" />
        </div>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">      <!-- Service 1: 3D Design & CAD -->
      <div class="service-card group">
        <div class="service-icon">
          <Palette className="w-8 h-8 text-gold" />
        </div>
        <h3 class="service-title">
          {t.service1.title}
        </h3>
        <p class="service-description">
          {t.service1.description}
        </p>
        <div class="flex justify-center mb-6">
          <img src="/images/3DfuerSie/3dzuSchmuck.jpg" alt="3D zu Schmuck" class="rounded-lg shadow-md w-full max-w-xs md:max-w-full" />
        </div>
        <div class="service-cta">
          <Button href={t.contactUrl} variant="outline" size="sm">
            {t.service1.cta}
          </Button>
        </div>
      </div>

      <!-- Service 2: Guss & 3D-Druck -->
      <div class="service-card group featured">
        <div class="service-icon">
          <Cog className="w-8 h-8 text-gold" />
        </div>
        <h3 class="service-title">
          {t.service2.title}
        </h3>
        <p class="service-description">
          {t.service2.description}
        </p>
        <p class="text-sm font-medium text-midnight mb-4 text-center">
          <strong>{isEnglish ? 'Your Benefits:' : 'Ihre Vorteile:'}</strong> {t.service2.advantages.replace(/^.*?: /, '')}
        </p>
        <div class="service-cta">
          <Button href={t.contactUrl} variant="primary" size="sm">
            {t.service2.cta}
          </Button>
        </div>
      </div>

      <!-- Service 3: Beratung & Support -->
      <div class="service-card group">
        <div class="service-icon">
          <Eye className="w-8 h-8 text-gold" />
        </div>
        <h3 class="service-title">
          {t.service3.title}
        </h3>
        <p class="service-description">
          {t.service3.description}
        </p>
        <div class="flex justify-center mb-6">
          <img src="/images/engRing2_1.jpg" alt="Engagement Ring Design" class="rounded-lg shadow-md w-full max-w-xs md:max-w-full" />
        </div>
        <div class="service-cta">
          <Button href={t.contactUrl} variant="outline" size="sm">
            {t.service3.cta}
          </Button>
        </div>
      </div>
    </div>    <!-- CTA Section -->
    <div class="text-center mt-20">
      <div class="max-w-2xl mx-auto">
        <h3 class="font-display text-2xl font-medium text-midnight mb-4">
          {t.ctaSection.title}
        </h3>
        <p class="text-gray-600 mb-8">
          {t.ctaSection.description}
        </p>
        <Button href="#contact" variant="primary" size="lg">
          {t.ctaSection.cta}
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .service-card {
    @apply bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300;
    @apply border border-gray-100 hover:border-gray-200;
    @apply transform hover:-translate-y-2;
  }  .service-card.featured {
    @apply ring-2 ring-gold ring-opacity-20 shadow-luxury;
    @apply relative overflow-hidden;
  }
    .service-card.featured::before {
    content: '';
    @apply absolute top-0 left-0 right-0 h-1;
    background: linear-gradient(to right, #D4AF37, rgba(212, 175, 55, 0.6));
  }
  
  .service-icon {
    @apply w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto;
    @apply group-hover:bg-gold group-hover:bg-opacity-20 transition-colors duration-300;
    background: rgba(212, 175, 55, 0.1);
  }
  
  .service-title {
    @apply font-display text-xl font-medium text-midnight mb-4 text-center;
  }
  
  .service-description {
    @apply text-gray-600 leading-relaxed mb-6 text-center;
  }
  
  .service-features {
    @apply space-y-2 mb-8;
  }
  
  .service-features li {
    @apply text-sm text-gray-600 flex items-center;
  }
  
  .service-features li::before {
    content: '✓';
    @apply text-gold mr-3 font-medium;
  }
  
  .service-cta {
    @apply mt-auto text-center;
  }
  
  /* Animation on scroll */
  .service-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fade-in-up 0.6s ease-out forwards;
  }
  
  .service-card:nth-child(1) {
    animation-delay: 0.1s;
  }
  
  .service-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .service-card:nth-child(3) {
    animation-delay: 0.3s;
  }
  
  @keyframes fade-in-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Intersection Observer for service cards animation
  function initServicesAnimation() {
    const cards = document.querySelectorAll('.service-card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '-50px'
    });
    
    cards.forEach((card) => {
      card.style.animationPlayState = 'paused';
      observer.observe(card);
    });
  }
  
  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initServicesAnimation);
  } else {
    initServicesAnimation();
  }
  
  // Re-initialize on page transitions
  document.addEventListener('astro:page-load', initServicesAnimation);
</script>
