---
import PageLayout from '../../../../shared/layouts/PageLayout.astro';

const title = 'Terms of Service | Phialo Design';
const description = 'Terms of Service of Phialo Design - Legal terms for our services.';
---

<PageLayout title={title} description={description} lang="en">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-light text-midnight mb-8">
          Terms of Service
        </h1>
        
        <div class="prose prose-lg max-w-none">
          <p class="text-lg text-gray-600 mb-8">
            These Terms of Service govern the relationship between Phialo Design and our customers in the provision of our services.
          </p>
          
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Note for Completion
            </h2>
            <p class="text-gray-600">
              This page serves as a placeholder for your complete Terms of Service. 
              Please supplement this with specific legal terms for your services, 
              including contract conclusion, payment terms, delivery and warranty.
            </p>
          </div>
          
          <div class="mt-12">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Contact
            </h2>
            <p class="text-gray-600">
              If you have any questions about our Terms of Service, please contact us at: 
              <a href="mailto:kontakt@phialo.de" class="text-gold hover:underline">kontakt@phialo.de</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>