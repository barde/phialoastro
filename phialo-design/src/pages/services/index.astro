---
import PageLayout from '../../layouts/PageLayout.astro';
import Services from '../../components/sections/Services.astro';

const title = '3D für Sie | Phialo Design';
const description = 'Professionelle 3D-Design Services für Ihre individuellen Projekte. Von der Idee zum fertigen 3D-Modell.';
---

<PageLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-b from-neutral-50 to-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-light text-neutral-900 mb-8">
          3D für Sie
        </h1>
        <p class="text-xl text-neutral-600 leading-relaxed">
          Verwandeln Sie Ihre Ideen in greifbare Realität. Unser professioneller 3D-Design Service 
          bringt Ihre Visionen vom Konzept bis zum fertigen Modell.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <div class="pt-0">
    <Services />
  </div>

  <!-- Call-to-Action -->
  <section class="py-20 bg-midnight text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-light mb-6">
        Haben Sie ein Projekt im Kopf?
      </h2>
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        Kontaktieren Sie uns für eine kostenlose Beratung und lassen Sie uns gemeinsam Ihre Idee verwirklichen.
      </p>
      <a 
        href="/contact" 
        class="inline-flex items-center px-8 py-4 bg-gold text-midnight text-lg font-medium rounded-full hover:bg-champagne transition-colors"
      >
        Kostenlose Beratung
      </a>
    </div>
  </section>
</PageLayout>
