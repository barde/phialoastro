---
import { Image } from 'astro:assets';
import PageLayout from '../shared/layouts/PageLayout.astro';
import Hero from '../features/home/components/HeroSection.astro';
import Testimonials from '../features/home/components/TestimonialsSection.astro';

const title = 'Phialo Design | 3D Design - Schmuck - Classes';
const description = 'Fantasie wird zu 3D wird Realität. Schmuck und Skulpturen, 3D Design, 3D-Druck und Guss. Ihre Idee als reales Modell! Classes & HowTos';
---

<PageLayout title={title} description={description}>
  <Hero />
  
  <!-- Overview Section -->
  <section class="py-24 bg-off-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-light text-midnight mb-6">
          Entdecken Sie unsere Welten
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Von einzigartigen Schmuckstücken über professionelle 3D-Services bis hin zu umfassenden Tutorials – 
          tauchen Sie ein in die verschiedenen Bereiche von Phialo Design.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Portfolio Card -->
        <a href="/portfolio" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-gold/20 to-champagne/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/portfolio-feature.jpg"
              alt="Phialo Design Portfolio"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Portfolio</h3>
            <p class="text-gray-600 text-sm">
              Entdecken Sie unsere einzigartigen Schmuckkreationen und 3D-Skulpturen
            </p>
          </div>
        </a>

        <!-- Services Card -->
        <a href="/services" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-midnight/20 to-charcoal/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/3d-services-feature.png"
              alt="3D für Sie - Professionelle 3D-Services"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">3D für Sie</h3>
            <p class="text-gray-600 text-sm">
              Professionelle 3D-Design Services für Ihre individuellen Projekte
            </p>
          </div>
        </a>

        <!-- Classes Card -->
        <a href="/classes" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-champagne/20 to-gold/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/classes-feature.jpg"
              alt="Classes - Lernen Sie 3D-Design und Blender"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Classes</h3>
            <p class="text-gray-600 text-sm">
              Lernen Sie 3D-Design und Blender in unseren umfassenden Kursen
            </p>
          </div>
        </a>

        <!-- Contact Card -->
        <a href="/contact" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-charcoal/20 to-midnight/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/contact-feature.jpg"
              alt="Kontakt - Nehmen Sie Kontakt mit uns auf"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Kontakt</h3>
            <p class="text-gray-600 text-sm">
              Haben Sie Fragen oder möchten Sie ein Projekt besprechen?
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <Testimonials />
</PageLayout>
