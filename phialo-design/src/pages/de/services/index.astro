---
import PageLayout from '../../../layouts/PageLayout.astro';
import Services from '../../../components/sections/Services.astro';
import { getLocaleFromUrl, createT } from '../../../lib/i18n';
import { translations } from '../../../lib/translations';

const locale = getLocaleFromUrl(Astro.url);
const t = createT(locale, translations);

const title = t('services.title') + ' | Phialo Design';
const description = t('services.description');
---

<PageLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-b from-neutral-50 to-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-light text-neutral-900 mb-8">
          {t('services.hero.title')}
        </h1>
        <p class="text-xl text-neutral-600 leading-relaxed">
          {t('services.hero.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <div class="pt-0">
    <Services />
  </div>

  <!-- Call-to-Action -->
  <section class="py-20 bg-midnight text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-light mb-6">
        {t('services.callToAction.title')}
      </h2>
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        {t('services.callToAction.subtitle')}
      </p>
      <a 
        href="/de/contact" 
        class="inline-flex items-center px-8 py-4 bg-gold text-midnight text-lg font-medium rounded-full hover:bg-champagne transition-colors"
      >
        {t('services.callToAction.cta')}
      </a>
    </div>
  </section>
</PageLayout>