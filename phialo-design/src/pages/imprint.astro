---
import PageLayout from '../layouts/PageLayout.astro';

const title = 'Impressum | Phialo Design';
const description = 'Impressum von Phialo Design - Rechtliche Angaben und Kontaktinformationen.';
---

<PageLayout title={title} description={description}>
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-light text-midnight mb-8">
          Impressum
        </h1>
        
        <div class="prose prose-lg max-w-none">
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Angaben gemäß § 5 TMG
            </h2>
            <p class="text-gray-600 mb-4">
              <strong>Phialo Design</strong><br>
              [Ihr Name/Firmenname]<br>
              [Straße und Hausnummer]<br>
              [PLZ und Ort]<br>
              Deutschland
            </p>
            
            <h3 class="text-xl font-medium text-midnight mb-2">
              Kontakt
            </h3>
            <p class="text-gray-600 mb-4">
              E-Mail: <a href="mailto:kontakt@phialo.de" class="text-gold hover:underline">kontakt@phialo.de</a>
            </p>
            
            <h3 class="text-xl font-medium text-midnight mb-2">
              Hinweis zur Vervollständigung
            </h3>
            <p class="text-gray-600">
              Bitte ergänzen Sie diese Seite mit Ihren vollständigen rechtlichen Angaben 
              gemäß den gesetzlichen Bestimmungen, einschließlich Ihrer Adresse, 
              Steuernummer und weiteren relevanten Informationen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>