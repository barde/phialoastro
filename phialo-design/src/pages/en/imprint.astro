---
import PageLayout from '../../layouts/PageLayout.astro';

const title = 'Legal Notice | Phialo Design';
const description = 'Legal Notice of Phialo Design - Legal information and contact details.';
---

<PageLayout title={title} description={description} lang="en">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-light text-midnight mb-8">
          Legal Notice
        </h1>
        
        <div class="prose prose-lg max-w-none">
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Information according to ยง 5 TMG
            </h2>
            <p class="text-gray-600 mb-4">
              <strong>Phialo Design</strong><br>
              [Your Name/Company Name]<br>
              [Street and House Number]<br>
              [Postal Code and City]<br>
              Germany
            </p>
            
            <h3 class="text-xl font-medium text-midnight mb-2">
              Contact
            </h3>
            <p class="text-gray-600 mb-4">
              Email: <a href="mailto:kontakt@phialo.de" class="text-gold hover:underline">kontakt@phialo.de</a>
            </p>
            
            <h3 class="text-xl font-medium text-midnight mb-2">
              Note for Completion
            </h3>
            <p class="text-gray-600">
              Please complete this page with your full legal information 
              according to legal requirements, including your address, 
              tax number and other relevant information.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>