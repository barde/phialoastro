---
// English version - Content to be translated
import { Image } from 'astro:assets';
import PageLayout from '../../shared/layouts/PageLayout.astro';
import Hero from '../../features/home/components/HeroSection.astro';
import Testimonials from '../../features/home/components/TestimonialsSection.astro';

const title = 'Phialo Design | 3D Design - Jewelry - Classes';
const description = 'Fantasy becomes 3D becomes reality. Jewelry and sculptures, 3D design, 3D printing and casting. Your idea as a real model! Classes & HowTos';
---

<PageLayout title={title} description={description} lang="en">
  <Hero />
  
  <!-- Overview Section -->
  <section class="py-24 bg-off-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-light text-midnight mb-6">
          Discover Our Worlds
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          From unique jewelry pieces to professional 3D services and comprehensive tutorials â€“ 
          dive into the different areas of Phialo Design.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Portfolio Card -->
        <a href="/en/portfolio" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-gold/20 to-champagne/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/portfolio-feature.jpg"
              alt="Phialo Design Portfolio"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Portfolio</h3>
            <p class="text-gray-600 text-sm">
              Discover our unique jewelry creations and 3D sculptures
            </p>
          </div>
        </a>

        <!-- Services Card -->
        <a href="/en/services" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-midnight/20 to-charcoal/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/3d-services-feature.png"
              alt="3D for You - Professional 3D Services"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">3D for You</h3>
            <p class="text-gray-600 text-sm">
              Professional 3D design services for your individual projects
            </p>
          </div>
        </a>

        <!-- Classes Card -->
        <a href="/en/classes" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-champagne/20 to-gold/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/classes-feature.jpg"
              alt="Classes - Learn 3D Design and Blender"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Classes</h3>
            <p class="text-gray-600 text-sm">
              Learn 3D design and Blender in our comprehensive courses
            </p>
          </div>
        </a>

        <!-- Contact Card -->
        <a href="/en/contact" class="group bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
          <div class="aspect-square bg-gradient-to-br from-charcoal/20 to-midnight/30 relative overflow-hidden">
            <Image 
              src="/images/homepage/contact-feature.png"
              alt="Contact - Get in touch with us"
              width={576}
              height={576}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-medium text-midnight mb-2">Contact</h3>
            <p class="text-gray-600 text-sm">
              Have questions or want to discuss a project?
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <Testimonials />
</PageLayout>