---
import PageLayout from '../../layouts/PageLayout.astro';

const title = 'Privacy Policy | Phialo Design';
const description = 'Privacy Policy of Phialo Design - Information about the processing of personal data.';
---

<PageLayout title={title} description={description} lang="en">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-light text-midnight mb-8">
          Privacy Policy
        </h1>
        
        <div class="prose prose-lg max-w-none">
          <p class="text-lg text-gray-600 mb-8">
            We take the protection of your personal data very seriously. This privacy policy informs you about the nature, scope and purpose of processing personal data on our website.
          </p>
          
          <div class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Note for Completion
            </h2>
            <p class="text-gray-600">
              This page serves as a placeholder for your complete privacy policy. 
              Please supplement this with specific information about your data processing, 
              including details about cookies, analytics, contact forms and other relevant aspects.
            </p>
          </div>
          
          <div class="mt-12">
            <h2 class="text-2xl font-medium text-midnight mb-4">
              Contact
            </h2>
            <p class="text-gray-600">
              If you have any questions about privacy, please contact us at: 
              <a href="mailto:kontakt@phialo.de" class="text-gold hover:underline">kontakt@phialo.de</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>