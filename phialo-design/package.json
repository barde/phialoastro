{
  "name": "phialo-design",
  "type": "module",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:pr": "./scripts/test-pr.sh",
    "test:e2e:pr": "playwright test --config=playwright.pr.config.ts",
    "test:e2e:critical": "playwright test --config=playwright.pr.config.ts",
    "test:e2e:smoke": "playwright test --config=playwright.smoke.config.ts",
    "test:e2e:browserstack": "playwright test --config=playwright.browserstack.config.ts",
    "test:e2e:ai": "playwright test --config=playwright.ai.config.ts",
    "test:e2e:nightly": "playwright test --workers=8",
    "typecheck": "astro check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-push": "npm run typecheck && npm run lint && npm run test:run",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name phialo-design",
    "deploy:preview": "npm run build && npx wrangler pages deploy dist --project-name phialo-design --env preview",
    "worker:dev": "cd ../workers && npm run dev",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose up dev",
    "docker:test": "docker-compose run --rm test",
    "docker:lint": "docker-compose run --rm quality",
    "docker:e2e": "docker-compose run --rm e2e",
    "docker:shell": "docker-compose run --rm dev /bin/sh",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "test:e2e:ci": "playwright test --reporter=list --forbid-only",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:performance": "node scripts/performance-tests.js",
    "coverage:report": "vitest run --coverage --reporter=json",
    "analyze": "rollup-plugin-visualizer",
    "worker:deploy": "cd ../workers && npm run deploy",
    "worker:deploy:preview": "cd ../workers && npm run deploy:preview",
    "worker:deploy:production": "cd ../workers && npm run deploy:production",
    "dev:full": "concurrently \"npm run dev\" \"npm run worker:dev\""
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.12.0",
    "astro-seo": "^0.8.4",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.3",
    "@zerostep/playwright": "^0.1.5",
    "axe-playwright": "^2.1.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "eslint-plugin-astro": "^1.3.1",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.16",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.2",
    "vitest": "^3.2.3"
  }
}
