# ============================================
# Optimized Caching Strategy for Cloudflare
# ============================================

# Immutable assets with hashed filenames (1 year)
/_astro/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Images (30 days + SWR)
/images/*
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.jpg
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.jpeg
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.png
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.webp
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.avif
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding, Accept

/*.svg
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
  Vary: Accept-Encoding

# Fonts (1 year - rarely change)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.otf
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

/*.eot
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# JavaScript and CSS (without hash - 1 day + SWR)
/*.js
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

/*.mjs
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

/*.css
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

# HTML pages (1 hour + SWR + must-revalidate)
/*.html
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400, must-revalidate
  Vary: Accept-Encoding

/
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400, must-revalidate
  Vary: Accept-Encoding

/en
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400, must-revalidate
  Vary: Accept-Encoding

/en/*
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400, must-revalidate
  Vary: Accept-Encoding

# API/JSON responses (5 minutes + SWR)
/*.json
  Cache-Control: public, max-age=300, stale-while-revalidate=3600
  Vary: Accept-Encoding

/api/*
  Cache-Control: public, max-age=300, stale-while-revalidate=3600
  Vary: Accept-Encoding

# Web App Manifest
/*.webmanifest
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

/manifest.json
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

# Service Worker (no-cache for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate

# Sitemap and robots (1 day)
/sitemap.xml
  Cache-Control: public, max-age=86400
  Vary: Accept-Encoding

/sitemap-*.xml
  Cache-Control: public, max-age=86400
  Vary: Accept-Encoding

/robots.txt
  Cache-Control: public, max-age=86400

# RSS feeds (1 hour)
/*.rss
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
  Vary: Accept-Encoding

/*.xml
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
  Vary: Accept-Encoding

# Error pages (short cache)
/404.html
  Cache-Control: public, max-age=300
  Vary: Accept-Encoding

/500.html
  Cache-Control: public, max-age=300
  Vary: Accept-Encoding